<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<com.android.volley.toolbox.NetworkImageView
		android:id="@+id/song_queue_image"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_alignParentStart="true"
		android:scaleType="fitXY"
		android:src="@drawable/ic_launcher"/>

	<TextView
		android:id="@+id/song_queue_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="4dp"
		android:layout_marginTop="10dp"
		android:layout_toEndOf="@+id/song_queue_image"
		android:layout_toStartOf="@+id/song_queue_progress_bar"
		
		android:singleLine="true"
		
		android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
		android:textColor="#000000">

	</TextView>

	<TextView
		android:id="@+id/song_queue_subtitle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignStart="@+id/song_queue_title"
		android:layout_below="@+id/song_queue_title"
		android:layout_toEndOf="@+id/song_queue_image"
		android:layout_toStartOf="@+id/song_queue_progress_bar"
		android:singleLine="true"
		android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
		android:textColor="#000000"
		android:textIsSelectable="false"/>

	<com.todddavies.components.progressbar.ProgressWheel
		android:id="@+id/song_queue_progress_bar"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:layout_centerVertical="true"
		android:layout_toStartOf="@+id/song_queue_menu"
		ProgressWheel:barColor="#0097D6"
		ProgressWheel:barLength="60dp"
		ProgressWheel:barWidth="7dp"
		ProgressWheel:rimColor="#330097D6"
		ProgressWheel:rimWidth="6dp"
		ProgressWheel:textColor="#222"
		ProgressWheel:textSize="14sp"/>
	<ImageView
        android:id="@+id/song_queue_menu"  
        android:layout_width="30dp" 
        android:layout_height="30dp"
        android:scaleType="fitCenter"  
        android:layout_alignParentEnd="true"
		android:layout_centerVertical="true"
		android:focusable="false"
        android:src="@drawable/ic_menu_moreoverflow_normal_holo_light"  
         />

</RelativeLayout>