<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF00" >

    <Button
        android:id="@+id/login_soundcloud_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Login with SoundCloud" />

    <Button
        android:id="@+id/login_google_plus_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_soundcloud_button"
        android:text="Login with Google Plus" />

    <Button
        android:id="@+id/login_facebook_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_google_plus_button"
        android:text="Login with Facebook" />

    <Button
        android:id="@+id/continue_not_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_facebook_button"
        android:text="Continue without login" />
    

</RelativeLayout>