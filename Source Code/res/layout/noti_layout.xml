<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent" >
	<ImageView
		android:id="@+id/noti_icon"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:src="@drawable/ic_media_play"
		android:scaleType="center" />
	<TextView
		android:id="@+id/noti_title"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/noti_icon"
		android:layout_width="wrap_content" />
	<TextView
		android:id="@+id/noti_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/noti_icon"
		android:layout_below="@+id/noti_title"
		android:layout_width="wrap_content" />
	<ImageView
		android:id="@+id/noti_prev"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_below="@+id/noti_icon"
		android:src="@drawable/ic_media_previous"
		android:layout_toLeftOf="@+id/noti_rew"
		 />
	<ImageView
		android:id="@+id/noti_rew"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_below="@+id/noti_icon"
		android:src="@drawable/ic_media_rew"
		android:layout_toLeftOf="@+id/noti_play_pause"
		 />
	<ImageView
		android:id="@+id/noti_play_pause"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_below="@+id/noti_icon"
		android:src="@drawable/ic_media_play"
		android:layout_centerHorizontal="true"
		 />
	<ImageView
		android:id="@+id/noti_next"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_below="@+id/noti_icon"
		android:src="@drawable/ic_media_next"
		android:layout_toRightOf="@+id/noti_ff"
		 />
	<ImageView
		android:id="@+id/noti_ff"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_below="@+id/noti_icon"
		android:src="@drawable/ic_media_ff"
		android:layout_toRightOf="@+id/noti_play_pause"/>
</RelativeLayout>
