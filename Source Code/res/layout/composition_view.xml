<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<TextView
		android:id="@+id/composition_view_cat"
		android:layout_width="match_parent"
		android:textSize="30dp"
		android:layout_height="wrap_content">
	</TextView>

	<ImageView
		android:id="@+id/composition_view_image"
		android:layout_width="100dp"
		android:layout_height="100dp"
		android:layout_below="@+id/composition_view_cat"
		android:src="@drawable/ic_launcher"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="100dp"
		android:layout_below="@+id/composition_view_cat"
		android:layout_toEndOf="@+id/composition_view_image"
		android:layout_toStartOf="@+id/composition_view_menu"
		android:orientation="vertical">

		<TextView
			android:id="@+id/item_1"
			android:layout_width="match_parent"
			android:layout_height="20dp"
			android:text="1. "
			android:textSize="15dp"/>

		<TextView
			android:id="@+id/item_2"
			android:layout_width="match_parent"
			android:layout_height="20dp"
			android:text="2. "
			android:textSize="15dp"/>

		<TextView
			android:id="@+id/item_3"
			android:layout_width="match_parent"
			android:layout_height="20dp"
			android:text="3. "
			android:textSize="15dp"/>

		<TextView
			android:id="@+id/item_4"
			android:layout_width="match_parent"
			android:layout_height="20dp"
			android:text="4. "
			android:textSize="15dp"/>

		<TextView
			android:id="@+id/item_5"
			android:layout_width="match_parent"
			android:layout_height="20dp"
			android:text="5. "
			android:textSize="15dp"/>
	</LinearLayout>

	<ImageView
		android:id="@+id/composition_view_menu"
		android:layout_width="30dp"
		android:layout_height="30dp"
		android:layout_alignParentEnd="true"
		android:layout_centerVertical="true"
		android:focusable="false"
		android:scaleType="fitCenter"
		android:src="@drawable/ic_menu_moreoverflow_normal_holo_light"/>

</RelativeLayout>