<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/login_soundcloud_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:text="Login with SoundCloud" />

    <Button
        android:id="@+id/login_google_plus_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login_soundcloud_button"
        android:layout_centerVertical="true"
        android:text="Login with Google Plus" />

    <Button
        android:id="@+id/login_facebook_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login_google_plus_button"
        android:layout_alignRight="@+id/login_google_plus_button"
        android:layout_below="@+id/login_google_plus_button"
        android:layout_marginTop="34dp"
        android:text="Login with Facebook" />

</RelativeLayout>
