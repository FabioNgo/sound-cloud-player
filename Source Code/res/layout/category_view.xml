<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="5dp">

	<TextView
		android:id="@+id/composition_view_cat"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textColor="@color/primary_text"
		android:textSize="20dp">
	</TextView>

	<EditText
		android:id="@+id/composition_view_cat_edit"
		android:layout_width="match_parent"
		android:layout_height="20dp"
		android:layout_toStartOf="@+id/composition_view_cancel"
		android:textColor="@color/primary_text"
		android:inputType="text"
		android:focusable="true"
		android:shadowColor="@color/primary"
		android:textSize="20dp">
	</EditText>
	<ImageView
		android:id="@+id/composition_view_edit"
		android:layout_width="20dp"
		android:layout_height="20dp"
		android:layout_alignTop="@+id/composition_view_cat_edit"
		android:layout_alignParentEnd="true"
		android:focusable="false"
		android:scaleType="fitXY"
		android:src="@android:drawable/ic_menu_edit"/>
	<ImageView
		android:id="@+id/composition_view_submit"
		android:layout_width="20dp"
		android:layout_height="20dp"
		android:layout_alignTop="@+id/composition_view_cat_edit"
		android:layout_alignParentEnd="true"
		android:focusable="false"
		android:scaleType="fitXY"
		android:src="@android:drawable/ic_menu_edit"/>
	<ImageView
		android:id="@+id/composition_view_cancel"
		android:layout_width="20dp"
		android:layout_height="20dp"
		android:layout_alignTop="@+id/composition_view_cat_edit"
		android:layout_toStartOf="@+id/composition_view_submit"
		android:focusable="false"
		android:scaleType="fitCenter"
		android:src="@android:drawable/ic_menu_close_clear_cancel"/>

	<ImageView
		android:id="@+id/composition_view_image"
		android:layout_width="100dp"
		android:layout_height="100dp"
		android:layout_below="@+id/composition_view_cat_edit"
		android:src="@drawable/ic_launcher"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="100dp"
		android:layout_below="@+id/composition_view_cat_edit"
		android:layout_toEndOf="@+id/composition_view_image"
		android:layout_toStartOf="@+id/composition_view_menu"
		android:orientation="vertical">

		<TextView
			android:id="@+id/item_1"
			android:layout_width="match_parent"
			android:layout_height="20dp"
			android:text="1. "
			android:textColor="@color/secondary_text"
			android:textSize="15dp"/>

		<TextView
			android:id="@+id/item_2"
			android:layout_width="match_parent"
			android:layout_height="20dp"
			android:text="2. "
			android:textColor="@color/secondary_text"
			android:textSize="15dp"/>

		<TextView
			android:id="@+id/item_3"
			android:layout_width="match_parent"
			android:layout_height="20dp"
			android:text="3. "
			android:textColor="@color/secondary_text"
			android:textSize="15dp"/>

		<TextView
			android:id="@+id/item_4"
			android:layout_width="match_parent"
			android:layout_height="20dp"
			android:text="4. "
			android:textColor="@color/secondary_text"
			android:textSize="15dp"/>

		<TextView
			android:id="@+id/item_5"
			android:layout_width="match_parent"
			android:layout_height="20dp"
			android:text="5. "
			android:textColor="@color/secondary_text"
			android:textSize="15dp"/>
	</LinearLayout>

	<ImageView
		android:id="@+id/composition_view_menu"
		android:layout_width="30dp"
		android:layout_height="30dp"
		android:layout_alignParentEnd="true"
		android:layout_centerVertical="true"
		android:focusable="false"
		android:scaleType="fitCenter"
		android:src="@drawable/ic_menu_moreoverflow_normal_holo_light"/>

</RelativeLayout>