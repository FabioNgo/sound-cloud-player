<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id = "@+id/user_info_adapter"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <!--  AVATAR OF USER -->
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/user_image"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_launcher"
        android:layout_height="wrap_content" />
    
    <!--  USER INFO -->
	<RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/user_image"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
	    <TextView
	        android:id="@+id/user_fullname"
	        android:layout_marginLeft="4dp"
	        android:layout_width="match_parent"
	        android:textColor="#0000FF"
	        android:layout_height="wrap_content"
	        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline" />

	    <TextView
	        android:layout_alignLeft="@+id/user_fullname"
	        android:layout_below="@+id/user_fullname"
	        android:id="@+id/user_country"
	        android:textColor="#000000"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
	        android:layout_marginBottom="10dp" />
	    
	     
		    <!--  User Details  -->
	  	  <RelativeLayout 
		        android:id = "@+id/song_info_field"
		        android:layout_alignLeft="@+id/song_subtitle"
		        android:layout_below="@+id/user_country"
		        android:layout_alignParentBottom="true"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content">
	  	      
	  	      <!-- NUMBER OF FOLLOWERS -->
	  	      	<RelativeLayout
		  	        android:id = "@+id/follower_count_field"
			        android:layout_alignParentLeft="true"
			        android:clickable="true"
			        android:layout_width="wrap_content"
			        android:layout_height="fill_parent">
			        <!-- 
		  	        <ImageView 
		  	            android:id = "@+id/follower_count_img"
				        android:layout_alignParentLeft="true"
				        android:layout_width="wrap_content"
				        android:layout_height="fill_parent"
				        android:src = "@drawable/play_button"/>
				       -->
		  	        <TextView
		  	            android:id="@+id/follwer_count_id"
		  	            android:textColor="#000000"
		  	            android:layout_toRightOf= "@+id/play_count_img"
		  	            android:layout_centerVertical="true"
		  	            android:layout_width="wrap_content"
				        android:layout_height="wrap_content"/>
	  	       </RelativeLayout>
	  	       
	  	      	<!-- FOLLOW/UNFOLLOW -->
	  	      	<RelativeLayout
		  	        android:id = "@+id/follow_unfollow_field"
		  	        android:layout_marginTop="4dp"
			        android:layout_below= "@id/follower_count_field"
			        android:clickable="true"
			        android:layout_width="wrap_content"
			        android:layout_height="fill_parent">
			        
	  	      	    <!-- 
		  	        <ImageView 
		  	            android:id = "@+id/follow_unfollow_img"
				        android:layout_alignParentLeft="true"
				        android:layout_width="wrap_content"
				        android:layout_height="fill_parent"
				        android:src = "@drawable/like_button"/>
				       -->
		  	        <TextView
		  	            android:id="@+id/follow_text"
		  	            android:textColor="#000000"
		  	            android:layout_toRightOf= "@+id/likes_count_img"
		  	            android:layout_centerVertical="true"
		  	            android:layout_width="wrap_content"
				        android:layout_height="wrap_content"/>
	  	       </RelativeLayout>
	  	       
	  	      	
	  	      	
	  	  	</RelativeLayout>
	  	  	
		</RelativeLayout>

</RelativeLayout>
