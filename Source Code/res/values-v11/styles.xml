<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
	-->
	<style name="AppBaseTheme" parent="Theme.AppCompat.Light">
		<item name="windowActionBar">false</item>
		<item name="colorPrimary">#ffff9431</item>
		<item name="colorPrimaryDark">#ffD56600</item>
		<!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
		-->
	</style>

	<!-- Application theme. -->
	<style name="AppTheme" parent="AppBaseTheme">
		<!-- All customizations that are NOT specific to a particular API-level can go here. -->
		<item name="android:background">@color/icons</item>
	</style>

	<style name="ActionBarTheme" parent="AppTheme">

		<!-- All customizations that are NOT specific to a particular API-level can go here. -->
		<item name="android:background">@color/primary</item>
		<item name="android:textColorPrimary">@color/icons</item>
		<item name="popupMenuStyle">@style/Widget.AppCompat.Light.PopupMenu</item>
	</style>

</resources>